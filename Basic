SELECT 
	C.NOME,
	C.DATA_NASCIMENTO AS 'DATA DE NASCIMENTO',
	C.NOME + ' ' + GENERO AS 'NOME E GENERO'
FROM CLIENTE C

SELECT
	*,
	CASE GENERO
		WHEN 'MASCULINO' THEN 'M'
		WHEN 'FEMININO' THEN 'F'
		ELSE GENERO
	END AS GENERO
FROM CLIENTE

SELECT
	*,
	CASE
		WHEN VALOR <=250 THEN 1
		WHEN VALOR <=500 THEN 2
		WHEN VALOR <=750 THEN 3
		WHEN VALOR <=1000 THEN 4
		ELSE 5
	END AS GRUPO
FROM VENDA

SELECT * FROM CLIENTE 
WHERE NOME LIKE '%MARIA%'
AND ID_CLIENTE IN (2,3,4)

SELECT * FROM CLIENTE
WHERE DATA_NASCIMENTO BETWEEN '1990-03-22' AND '1995-07-25'
AND EMAIL IS NULL

SELECT * FROM CLIENTE
WHERE TELEFONE = '' OR TELEFONE IS NULL OR EMAIL IS NULL OR EMAIL = ''

SELECT NOME, DATA_NASCIMENTO, GENERO FROM CLIENTE
ORDER BY DATA_NASCIMENTO ASC

SELECT * FROM CLIENTE 
ORDER BY GENERO ASC, NOME DESC

SELECT TOP (10) * FROM VENDA
ORDER BY VALOR DESC, DATA_VENDA ASC

SELECT * FROM VENDA
ORDER BY VALOR DESC, DATA_VENDA ASC
OFFSET 5 ROWS FETCH NEXT 5 ROWS ONLY

SELECT DISTINCT GENERO FROM CLIENTE

SELECT VENDEDOR, 'VENDEDORES' AS CATEGORIA FROM VENDEDOR
UNION ALL
SELECT NOME,'CLIENTE' AS CATEGORIA FROM CLIENTE
ORDER BY CATEGORIA ASC

SELECT ID_VENDEDOR FROM VENDEDOR
INTERSECT

SELECT ID_VENDEDOR FROM VENDA

SELECT ID_VENDEDOR FROM VENDEDOR
EXCEPT

SELECT ID_VENDEDOR FROM VENDA

SELECT V.ID_VENDA, C.NOME AS CLIENTE, VD.VENDEDOR, P.PRODUTO, V.VALOR FROM VENDA AS V
	INNER JOIN CLIENTE AS C ON (V.ID_CLIENTE=C.ID_CLIENTE)
	INNER JOIN VENDEDOR AS VD ON (V.ID_VENDEDOR=VD.ID_VENDEDOR)
	INNER JOIN PRODUTO AS P ON (V.ID_PRODUTO=P.ID_PRODUTO)

SELECT V.VENDEDOR, P.PRODUTO, 2 AS 'META' FROM VENDEDOR AS V
	CROSS JOIN PRODUTO AS P

SELECT * FROM VENDEDOR AS VD
	LEFT OUTER JOIN VENDA AS V ON (V.ID_VENDEDOR=VD.ID_VENDEDOR)
WHERE V.ID_VENDEDOR IS NULL

SELECT CAST('100' AS INT) + CAST('10' AS INT) 
SELECT CAST('100.99' AS INT)
SELECT CAST(VALOR AS INT) AS VALOR FROM VENDA
SELECT CAST(VALOR AS NUMERIC(8,2)) FROM VENDA
SELECT CAST('23/03/2021 22:22:45' AS DATETIME)
SELECT TRY_CONVERT(VARCHAR(10),DATA_VENDA,103) FROM VENDA
SELECT TRY_CAST('A' AS INT)
SELECT FORMAT(DATA_VENDA, 'dd/MM/yyyy') FROM VENDA


SELECT GETDATE()
SELECT DATEPART(SECOND,GETDATE())
SELECT DATENAME(WEEKDAY,GETDATE())
SELECT DATEADD(HOUR,1,GETDATE())
SELECT DATEDIFF(MONTH,'01/03/2021','10/03/2021')

SELECT NOME + ' - ' + GENERO AS CLIENTE, DATA_NASCIMENTO FROM CLIENTE

SELECT CONCAT (NOME,' - ',GENERO) FROM CLIENTE

SELECT NOME, ISNULL(EMAIL,TELEFONE) AS CONTATO FROM CLIENTE

SELECT NOME, COALESCE(EMAIL,TELEFONE) AS CONTATO FROM CLIENTE

SELECT SUBSTRING('ABCD',2,3)
SELECT LEFT('ABCD',3)
SELECT RIGHT('ABCD',3)
SELECT CHARINDEX(' ','MARIA JOSE')
SELECT SUBSTRING('MARIA JOSE',1,CHARINDEX(' ','MARIA JOSE'))

SELECT NOME, SUBSTRING(NOME,1,CHARINDEX(' ',NOME)),LEN(NOME)
FROM CLIENTE

SELECT REPLACE('12-03-2021','-','/')
SELECT REPLICATE(0,10)
SELECT *FROM STRING_SPLIT('2020,2021,2022,2023',',')

SELECT UPPER('maria jose')
SELECT LOWER('MARIA JOSE')
SELECT UPPER(NOME) FROM CLIENTE
SELECT RTRIM(LTRIM('       MARIA JOSE       '))
SELECT FORMAT(1111111111111,'0000000000000000')
SELECT 2 + (3 * 2) + (10 / 2)
SELECT 9 / CAST(2 AS FLOAT)
SELECT *, VALOR - (VALOR*0.10) AS VALOR_COM_DESCONTO FROM VENDA
